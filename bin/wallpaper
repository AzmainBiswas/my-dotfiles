#!/usr/bin/env python3

import os
import random

WallPath = "/mnt/media/wallpapers"
wallpapers = os.listdir(WallPath)
wallpaper = random.choice(wallpapers)

FullPath = os.path.join(WallPath, wallpaper)

os.system(f'cp -f "{FullPath}" $HOME/.config/wall.png')

os.system(f"killall swaybg && swaybg -m fill -i $HOME/.config/wall.png &")
