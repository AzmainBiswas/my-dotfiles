set previewer ~/.config/lf/lf_kitty_preview
set cleaner ~/.config/lf/lf_kitty_clean

# Basic Settings
set hidden true
set ignorecase true
set icons true

# Custom Functions
cmd mkdir ${{
  printf "Directory Name: "
  read ans
  mkdir $ans
}}

cmd mkfile ${{
  printf "File Name: "
  read ans
  $EDITOR $ans
}}

cmd setwallpaper ${{
    cp "$f" ~/.config/wall.jpg
    $HOME/scripts/set-wall.sh ~/.config/wall.jpg
}}

# Archive bindings
cmd unarchive ${{
  case "$f" in
      *.zip) unzip "$f" ;;
      *.tar.gz) tar -xzvf "$f" ;;
      *.tar.bz2) tar -xjvf "$f" ;;
      *.tar) tar -xvf "$f" ;;
      *) echo "Unsupported format" ;;
  esac
}}

# Trash bindings
cmd delete ${{
	clear; tput cup $(($(tput lines)/3)); tput bold
	set -f
	printf "%s\n\t" "$fx"
	printf "delete?[y/N]"
	read ans
	[ $ans = "y" ] && rm -rf -- $fx
}}

cmd restore_trash ${{
  trash-restore
}}

# Bindings
map d
map m

map c $code "$f"
map nv $nvim "$f"
map T $kitty "$f"

map uz unarchive
map ae $wine "$f"

# Basic Functions
map . set hidden!
map dd delete
map dr restore_trash
map p paste
map x cut
map y copy
map <enter> open
map R reload
map mf mkfile
map md mkdir
map bg setwallpaper
map C clear

# Movement
map gD cd /mnt/media/downloads
map gd cd /mnt/docs/Documents
map gc cd ~/.config
map gv cd /mnt/media/video
map gm cd /mnt/media/music
map gc cd /mnt/docs/codding-and-programming
map gt cd ~/.local/share/Trash/files
